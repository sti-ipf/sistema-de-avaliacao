<%= form_tag(import_segments_path, :id => 'import_segments_form', :multipart => true) do %>
  <%= label_tag "Informe o arquivo dos segmentos a ser importado:" %>
  <%= file_field(:csv_file, 'csv_file', :id => 'csv_file') %>
